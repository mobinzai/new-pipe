pipeline {
  agent none
  stages {
    stage('Docker Build') {
      agent any
      steps {
        sh 'docker build -t mobinzai/lap .'
      }
    }
    stage('Docker Push') {
      agent any
      steps {
        withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'dockerHubPassword', usernameVariable: 'dockerHubUser')]) {
          sh "docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
          sh 'docker push mobinzai/lap'
	}
      }
    }
    stage('Deleting the old builds and services') {
	    agent any
	    steps{
		    //sh 'kubectl delete deployments lap'
		    //sh 'kubectl delete services lap' 
		    }
		 }
	
	stage('Deploying New Build To Kubernetes') {
	    agent any
	    steps{   
	            sh 'docker pull mobinzai/lap'
	    	    sh 'kubectl create deployment lap --image mobinzai/lap'
		    sh 'kubectl set image deployments/kube lap=mobinzai/lap'
		    sh 'kubectl create service nodeport lap --tcp=80:80'
	    }
      }
  }
}
