pipeline {
  agent none
  stages {
    stage('Docker Build') {
      agent any
      steps {
        sh 'docker build -t mobinzai/lap:latest .'
      }
    }
    stage('Docker Push') {
      agent any
      steps {
        withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'dockerHubPassword', usernameVariable: 'dockerHubUser')]) {
          sh "docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
          sh 'docker push mobinzai/lap:latest'
	}
      }
    }
	stage('Deploying New Build To Kubernetes') {
	    agent any
	    steps{   
	            sh 'docker push mobinzai/lap:latest'
	    	    sh 'kubectl set image deployment/lap lap=mobinzai/lap:latest'
		    
	    }
      }
  }
}
